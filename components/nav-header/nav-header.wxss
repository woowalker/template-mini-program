.c-nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  box-sizing: content-box;
  background-color: #ffffff;
  z-index: 999;
}

.c-nav-header.dark {
  background-color: rgba(51, 51, 51, .8);
}

.c-nav-header__back {
  width: 52rpx;
  height: 88rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.c-nav-header__back-icon {
  width: 12rpx;
  height: 20rpx;
}

.c-nav-header__title {
  color: #333333;
}

.c-nav-header.dark .c-nav-header__title {
  color: #ffffff;
}