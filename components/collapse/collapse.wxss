.c-collapse.expanded .c-collapse__title-icon {
  transform: rotateZ(90deg);
}

.c-collapse.expanded .c-collapse__body {
  height: auto;
}

.c-collapse.border {
  border-bottom: 1rpx solid #EFEFEF;
}

.c-collapse__title {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.c-collapse__title-font {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.c-collapse__title-icon {
  width: 12rpx;
  height: 20rpx;
  transform: rotateZ(-90deg);
  transition: all .2s ease;
}

.c-collapse__body {
  width: 100%;
  height: 0;
  background-color: #EFEFEF;
  overflow: hidden;
}