.c-expanded-text {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.c-expanded-text__font {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.c-expanded-text__zone {
  height: 24rpx;
  padding: 0 16rpx;
}

.c-expanded-text__zone-img {
  width: 12rpx;
  height: 20rpx;
  transform: rotateZ(-90deg);
  transition: all .2s ease;
}

.c-expanded-text__zone-img.expanded {
  transform: rotateZ(90deg);
}