/** 注：设计稿以 iphone6 为基准，因此 1rpx = 0.5px = 1物理像素，因此设计稿上的尺寸就是 rpx 的值 */
/** 全局样式 */
page {
  width: 100%;
  height: 100%;
  background-color: #fafafa;
  color: #333333;
}

page,
view,
text,
input[type="text"],
input[type="number"],
input[type="idcard"],
input[type="digit"],
textarea {
  box-sizing: border-box;
}

view {
  font-size: 0;
}

text {
  display: inline-block;
  line-height: 1;
}

page button {
  font-size: 0;
  padding: 0;
}

/** 布局 */
.pos-relative {
  position: relative;
}

.pos-absolute {
  position: absolute;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.full-container {
  width: 100%;
  height: 100%;
}

.dis-none {
  display: none;
}

.dis-block {
  display: block;
}

.overflow-hidden {
  overflow: hidden;
}

.visible-hidden {
  visibility: hidden;
}

.bg-primary {
  background-color: #4B8AEB;
}

.bg-disabled {
  background-color: #9a9a9a;
}

.bg-fff {
  background-color: #ffffff;
}

/** 文字 */
.line-height-unset {
  line-height: unset;
}

.line-height-0 {
  line-height: 0;
}

.line-height-1 {
  line-height: 1;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-linethrough {
  text-decoration: line-through;
}

.fz-0 {
  font-size: 0;
}

.fz-20 {
  font-size: 20rpx;
}

.fz-24 {
  font-size: 24rpx;
}

.fz-28 {
  font-size: 28rpx;
}

.fz-32 {
  font-size: 32rpx;
}

.fz-34 {
  font-size: 34rpx;
}

.fz-36 {
  font-size: 36rpx;
}

.fz-40 {
  font-size: 40rpx;
}

.fw-bold {
  font-weight: bold;
}

.cr-000 {
  color: #000000;
}

.cr-333 {
  color: #333333;
}

.cr-666 {
  color: #666666;
}

.cr-999 {
  color: #999999;
}

.cr-fff {
  color: #fff;
}

.cr-primary {
  color: #4B8AEB;
}

.cr-error {
  color: #FF3F3F;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/** 间距分割 */
.pd-20 {
  padding: 20rpx;
}

.pd-40 {
  padding: 40rpx;
}

.pd-h8 {
  padding: 0 8rpx;
}

.pd-h20 {
  padding: 0 20rpx;
}

.pd-v20 {
  padding: 20rpx 0;
}

.pd-t10 {
  padding-top: 10rpx;
}

.pd-t20 {
  padding-top: 20rpx;
}

.pd-r10 {
  padding-right: 10rpx;
}

.pd-r20 {
  padding-right: 20rpx;
}

.pd-b20 {
  padding-bottom: 20rpx;
}

.pd-b40 {
  padding-bottom: 40rpx;
}

.pd-l10 {
  padding-left: 10rpx;
}

.pd-l20 {
  padding-left: 20rpx;
}

.mg-20 {
  margin: 20rpx;
}

.mg-40 {
  margin: 40rpx;
}

.mg-h20 {
  margin: 0 20rpx;
}

.mg-v40 {
  margin: 40rpx 0;
}

.mg-t10 {
  margin-top: 10rpx;
}

.mg-t20 {
  margin-top: 20rpx;
}

.mg-t40 {
  margin-top: 40rpx;
}

.mg-r20 {
  margin-right: 20rpx;
}

.mg-r40 {
  margin-right: 40rpx;
}

.mg-b10 {
  margin-bottom: 10rpx;
}

.mg-b20 {
  margin-bottom: 20rpx;
}

.mg-b40 {
