  margin-left: 20rpx;
}

/** 边框 */
.br {
  border: solid 1rpx #c9c9c9;
}

.br-tranparent {
  border: 1rpx solid transparent;
}

.br-white {
  border: 1rpx solid #ffffff;
}

.br-primary {
  border: 1rpx solid #4B8AEB;
}

.br-error {
  border: 1rpx solid #FF3F3F;
}

.br-b {
  border-bottom: solid 1rpx #c9c9c9;
}

.br-t {
  border-top: solid 1rpx #c9c9c9;
}

.br-l {
  border-left: solid 1rpx #c9c9c9;
}

.br-r {
  border-right: solid 1rpx #c9c9c9;
}

.bra-4px {
  border-radius: 4px;
}

.box-shadow {
  box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.06);
}

/** 按钮 */
.btn-primary__block,
.btn-error__block {
  width: 100% !important;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.btn-primary__block-font,
.btn-error__block-font {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.btn-primary__block {
  background-color: #4B8AEB;
}

.btn-error__block {
  background-color: #FF3F3F;
}

/** 业务逻辑 */
.hover-class {
  opacity: 0.7;
}

