.swiper-header {
  width: 100%;
  height: 320rpx;
}

.nav-order {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.nav-order__zone {
  height: 202rpx;
  padding: 30rpx 0 40rpx 0;
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.nav-order__zone-img {
  width: 100rpx;
  height: 100rpx;
}

.msg-notice {
  width: 100%;
  height: 80rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.msg-notice__img {
  width: 50rpx;
  height: 40rpx;
  margin-right: 40rpx;
}

.msg-notice__zone {
  width: 540rpx;
  height: 40rpx;
}

.swiper-attach {
  width: 100%;
  height: 200rpx;
}

.charge-btn {
  width: 100% !important;
  height: 120rpx;
  background: linear-gradient(-45deg, #A1C4FD, #C2E9FB);
  display: flex;
  justify-content: center;
  align-items: center;
}

.charge-btn__img {
  width: 46rpx;
  height: 44rpx;
  margin-right: 22rpx;
}