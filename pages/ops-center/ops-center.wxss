.nickname {
  width: 100%;
  height: 200rpx;
}

.nickname__pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #dfdfdf;
  margin: 10rpx 40rpx 0 0;
}

.nickname__detail {
  float: left;
  height: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.nickname__operator {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.nickname__operator-pic {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.nickname__rechange {
  float: right;
  width: 50rpx;
  height: 100%;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nickname__rechange-pic {
  width: 50rpx;
  height: 50rpx;
}

.ops-item {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.ops-item__pic {
  width: 84rpx;
  height: 80rpx;
}

.ops-item__count {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.ops-item__count-text {
  display: inline-block;
  border-radius: 8rpx;
  padding: 8rpx;
}