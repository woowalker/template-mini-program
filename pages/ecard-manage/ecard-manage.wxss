page {
  overflow: hidden;
}

.tab-bar {
  padding: 0 20rpx;
}

.ecards {
  width: 200%;
  height: calc(100% - 100rpx - 86rpx - 2px);
  transition: all .2s ease;
}

.ecards.tabRightShow {
  transform: translateX(-50%);
}

.ecard-manage {
  width: 50%;
  height: 100%;
  float: left;
}

.ecard-manage__card {
  width: calc(100% - 40rpx);
  padding: 20rpx;
  margin: 20rpx auto 0 auto;
}

.ecard-manage__card-main {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}

.ecard-manage__card-logo {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}

.ecard-manage__card-title,
.ecard-manage__card-charge {
  padding: 10rpx 0;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.ecard-manage__card-title {
  flex: 1;
  overflow: hidden;
}

.ecard-manage__card-charge--btn {
  width: 112rpx;
  height: 42rpx;
  line-height: 42rpx;
  border-radius: 26rpx;
}